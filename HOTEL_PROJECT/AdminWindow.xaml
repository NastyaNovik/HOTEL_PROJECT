						<Label.Effect>
							<DropShadowEffect
                 ShadowDepth="4"
                 Direction="330"
                 Color="Black"
                 Opacity="0.5"/>
						</Label.Effect>
					</Label>
					<Label Content="Должность"  Foreground="Black"  FontSize="22" HorizontalAlignment="Left" Margin="522,108,0,0" VerticalAlignment="Top" Opacity="1" FontFamily="Century Gothic" Grid.Column="2">
